<Window x:Class="KeyappTestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyappTestTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="336" Width="574">
    <Grid>
        <Button Content="Закрити всі додатки" HorizontalAlignment="Left" VerticalAlignment="Top" Click="CloseAppsButton_Click" Margin="21,30,0,0"/>
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,85,0,0" Width="300" Height="25" FontSize="16" KeyDown="searchTextBox_KeyDown"/>
        <Button Content="Шукати" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="228,0,0,0" Width="100" Click="Search_Click"/>
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,210,0,0" FontSize="16" TextWrapping="Wrap"/>
    </Grid>
</Window>
